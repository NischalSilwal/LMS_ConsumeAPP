@model LMS_ConsumeAPP.Application.DTOs.AuthorDTO.AuthorDto

<h2>Author Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Bio</dt>
        <dd class="col-sm-10">@Model.Bio</dd>

        <dt class="col-sm-2">Books</dt>
        <dd class="col-sm-10">@(Model.BookIds?.Count ?? 0) books assigned</dd>
    </dl>
</div>

<div>
    <a asp-action="EditAuthor" asp-route-id="@Model.AuthorId" class="btn btn-warning">Edit</a>
    <a asp-action="IndexAuthor" class="btn btn-secondary">Back to List</a>
</div>