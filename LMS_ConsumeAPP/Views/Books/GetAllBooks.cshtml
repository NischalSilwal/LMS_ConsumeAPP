@model IEnumerable<LMS_ConsumeAPP.Domain.Model.Book>

@{
    ViewData["Title"] = "Book Management";
}

<style>
    body, html {
        margin: 0;
        padding: 0;
        height: 100%;
    }
    .h2{
        margin: 0;
        font-family: 'Montserrat', sans-serif; /* Apply Montserrat Font */
    }
    .header {
        height: 71px;
    }

    .body {
        background: #F2F2F2;
        padding: 35px 40px 0 40px;
        height: calc(100% - 71px);
        overflow-y: auto;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        background: #F2F2F2;
        overflow: hidden;
        box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
    }

    .table thead {
        background: #5E5E5E;
        color: white;
    }

    .table thead th {
        padding: 14px;
        text-align: center;
        font-weight: 600;
    }

    .table tbody tr {
        border-bottom: 1px solid #E0E0E0;
    }

    .table tbody tr:last-child {
        border-bottom: none;
    }

    .table tbody td {
        padding: 14px;
        color: #333;
        font-size: 14px;
        text-align: center;
        vertical-align: middle;
    }

    .btn {
        padding: 8px 20px;
        font-size: 14px;
        font-weight: 600;
        border: none;
        border-radius: 4px;
    }

    .btn-Action {
        width: 128px;
        height: 52px;
        background-color: #C7B303; /* Yellow for Edit */
        color: white;
        padding: 14px 20px;
        border: none;
        border-radius: 20px; /* Rounded corners */
        font-size: 14px;
        font-weight: 600;
        cursor: pointer; /* Pointer on hover */
    }

    .table tbody td:last-child {
        width: 300px;
        margin: 0;
        text-align: center;
    }

    .table tbody td:first-child {
        width: 100px;
        margin: 0;
        text-align: center;
    }

    .btn:hover {
        opacity: 0.9; /* Subtle hover effect */
    }

    .card {
        background: #E3E3E3;
        padding: 22px 34px;
        border: none;
        border-radius: 8px;
        box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
    }

    .form-control {
        height: 65px;
        background-color: #D9D9D9;
        border: none;
        border-radius: 4px;
    }

    .btn-submit {
        background-color: #255D81;
        width: 260px;
        color: white;
        padding: 21px 56px;
        border: none;
        border-radius: 20px;
    }
</style>

<div class="header" style="width: 100%; display: flex; align-items: center;">
    <img src="~/images/PageLogo/BookDetailsLogo.png" alt="Book Logo" style="width: 35px; height: 35px; margin-left: 40px; margin-right: 9px;">
    <h2 style="margin: 0 0 0 10px;">Book Details</h2>
</div>

<div class="body">
    <!-- Add Book Form -->
    <div class="card mb-4">
        <h3 style="font-weight: 600; padding-bottom: 14px; font-size: 28px; color: #333;">Add New Book</h3>
        <form asp-action="AddBook" method="post">
            <div class="mb-3">
                <label class="form-label" style="font-size: 14px; font-weight: bold; color: #333;">Book ID</label>
                <input type="text" class="form-control" name="BookId" placeholder="Enter Book ID" required>
            </div>
            <div class="mb-3">
                <label class="form-label" style="font-size: 14px; font-weight: bold; color: #333;">Title</label>
                <input type="text" class="form-control" name="Title" placeholder="Enter Title" required>
            </div>
            <div class="mb-3">
                <label class="form-label" style="font-size: 14px; font-weight: bold; color: #333;">Genre</label>
                <input type="text" class="form-control" name="Genre" placeholder="Enter Genre" required>
            </div>
            <div class="mb-3">
                <label class="form-label" style="font-size: 14px; font-weight: bold; color: #333;">ISBN</label>
                <input type="text" class="form-control" name="ISBN" placeholder="Enter ISBN" required>
            </div>
            <div class="mb-3">
                <label class="form-label" style="font-size: 14px; font-weight: bold; color: #333;">Quantity</label>
                <input type="text" class="form-control" name="Quantity" placeholder="Enter Quantity" required>
            </div>
            <button type="submit" class="btn-submit">Add Book</button>
        </form>
    </div>

    <!-- Book List Table -->
    <div class="card">
        <h3 style="font-weight: 600; padding-bottom: 14px; font-size: 28px; color: #333;">Book List</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Book ID</th>
                    <th>Title</th>
                    <th>Genre</th>
                    <th>ISBN</th>
                    <th>Quantity</th>
                    <th>Authors</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var book in Model)
                    {
                        <tr>
                            <td>@book.BookId</td>
                            <td>@book.Title</td>
                            <td>@book.Genre</td>
                            <td>@book.ISBN</td>
                            <td>@book.Quantity</td>
                            <td>@string.Join(", ", book.Authors)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@book.BookId" class="btn btn-primary">Edit</a> |
                               
                                <form asp-action="DeleteBook" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@book.BookId" />
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted">No books available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
