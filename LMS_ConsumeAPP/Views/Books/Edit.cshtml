@model LMS_ConsumeAPP.Application.DTOs.BookDTO.BookDto

<div class="container mt-4">
    <h2>Edit Book</h2>
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="BookId" />

                <div class="form-group mb-3">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Genre" class="control-label"></label>
                    <input asp-for="Genre" class="form-control" />
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ISBN" class="control-label"></label>
                    <input asp-for="ISBN" class="form-control" />
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="AuthorIds" class="control-label">Authors (Comma separated IDs)</label>
                    <input type="text" id="authorIdsInput" class="form-control"
                           value="@(Model.AuthorIds != null ? string.Join(",", Model.AuthorIds) : "")" />
                    <input type="hidden" asp-for="AuthorIds" id="authorIdsHidden" />
                    <span asp-validation-for="AuthorIds" class="text-danger"></span>
                    <small class="form-text text-muted">Enter author IDs separated by commas (e.g., 1,2,3)</small>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" onclick="return prepareAuthorIds();" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function prepareAuthorIds() {
            var authorIdsInput = document.getElementById('authorIdsInput').value;
            var authorIds = authorIdsInput.split(',')
                .map(id => id.trim())
                .filter(id => id !== '')
                .map(id => parseInt(id));

            document.getElementById('authorIdsHidden').value = JSON.stringify(authorIds);
            return true;
        }
    </script>
}