@model LMS_ConsumeAPP.Domain.Model.User
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HSMSS Library Management System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: "Outfit", sans-serif;
        }

        .register {
            background: #255d81;
            color: #fff;
            border-top-left-radius: 30px;
            border-bottom-left-radius: 30px;
        }

        .login {
            background: #ffffff;
            color: #000;
        }

        h1, h2 {
            font-size: 40px;
            text-align: center;
        }

        p {
            font-size: 24px;
            text-align: center;
        }

        .form-group input {
            border-radius: 30px;
            font-size: 20px;
            color: #6a6a6a;
        }

        .login-btn, .register-btn {
            padding: 15px 40px;
            border: none;
            border-radius: 30px;
            font-size: 20px;
            font-weight: bold;
            cursor: pointer;
            margin-top: 20px;
        }

        .login-btn {
            background: #255d81;
            color: #fff;
        }

        .register-btn {
            background: #d9d9d9;
            color: #000;
        }

        .forgot-password a {
            text-decoration: none;
            font-size: 16px;
            color: #255d81;
        }

        .image-preview {
            max-width: 100%;
            height: auto;
        }
    </style>
</head>
<body>
    <div class="container-fluid h-100">
        <div class="row h-100">
            <!-- Login Section -->
            <div class="col-12 col-md-6 d-flex flex-column align-items-center justify-content-center p-4 login">
                <form method="post" asp-action="Login" class="w-100 text-center">
                    <img src="~/images/LoginBookImage.jpg" alt="Library Logo" class="image-preview mb-4">
                    <h2>HSMSS Library Management System</h2>
                    <p>Please enter your credentials</p>

                    <div class="form-group mb-3 mx-auto" style="max-width: 450px;">
                        <input type="text" name="Username" id="username" class="form-control" placeholder="Username" required>
                    </div>
                    <div class="form-group mb-3 mx-auto" style="max-width: 450px;">
                        <input type="password" name="Password" id="password" class="form-control" placeholder="Password" required>
                    </div>

                    <div class="forgot-password mb-3">
                        <a href="#">Forgot Password?</a>
                    </div>

                    <button type="submit" class="login-btn">Log In</button>
                </form>
            </div>

            <!-- Register Section -->
            <div class="col-12 col-md-6 d-flex flex-column align-items-center justify-content-center p-4 register text-center">
                <img src="~/images/RegisterSectionLogo1.png" alt="Library Logo" class="image-preview mb-4">
                <h1>HSMSS Library</h1>
                <p style="font-size: 32px; font-weight: 500;">New to our platform?</p>
                <p style="font-size: 32px; font-weight: 500;"><strong>Register Now</strong></p>
                <a asp-action="SignUp" class="btn register-btn" style="padding: 12px 96px; border-radius: 30px;">Register</a>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
